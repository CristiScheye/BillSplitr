<%= image_tag 'skydiving.jpg', class: 'landing' %>

<div class="row">
  <div class="col-xs-12">
    <h1 class="title">Bill Split</h1>
    <h2 class="title">Split bills with friends</h2>
  </div>
</div>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3 login">

    <%= form_for @user do |f| %>
      <fieldset>
        <legend>Sign Up</legend>
        <div class="form-group row">
          <div class="col-xs-3">
            <%= f.label :f_name, 'First Name' %>
          </div>
          <div class="col-xs-9">
            <%= f.text_field :f_name %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <%= f.label :l_name, 'Last Name' %>
          </div>
          <div class="col-xs-9">
            <%= f.text_field :l_name %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <%= f.label :email, 'Email (login)' %>
          </div>
          <div class="col-xs-9">
            <%= f.email_field :email %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-3">
            <%= f.label :password, 'Password' %>
          </div>
          <div class="col-xs-9">
            <%= f.password_field :password %>
          </div>
        </div>
      </fieldset>
      <%= f.submit 'Sign Up', class: 'btn btn-success login' %>
    <% end %>
  </div>
</div>
