<div class="navbar navbar-default">
  <div class="navbar-header">
    <%= link_to "Bill Split", root_url, class: 'navbar-brand' %>
  </div>

  <div class="navbar navbar-left">
    <ul class="navbar-nav nav">
      <li><%= link_to "Bills", '/#/bills' %></li>
      <li><%= link_to "Payments", '/#/payments' %></li>
    </ul>
  </div>

  <div class="navbar navbar-right">
    <% if logged_in? %>
      <%= button_to "Log Out", session_url, method: :delete, class: 'btn' %>
    <% else %>
      <%= link_to "Log In", new_session_url, class: 'btn btn-primary' %>
      <%= link_to "Sign Up", new_user_url, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>