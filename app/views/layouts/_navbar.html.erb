<div class="navbar navbar-default">
  <div class="navbar-header">
    <%= link_to "Bill Split", root_url, class: 'navbar-brand' %>
  </div>

  <div class="navbar navbar-right">
    <% if logged_in? %>
      <%= link_to '+ New Bill', '/#/bills/new', class: 'btn btn-primary' %>
      <%= button_to "Log Out", session_url, method: :delete, class: 'btn btn-default' %>
    <% else %>
      <%= link_to "Log In", new_session_url, class: 'btn btn-primary' %>
      <%= link_to "Sign Up", new_user_url, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
