<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h1>Log In</h1>

    <%= form_tag(controller: 'sessions', action: 'create') do %>

      <div class="form-group row">
        <div class="col-xs-3">
          <%= label_tag :email %>
        </div>
        <div class="col-xs-9">
          <%= email_field_tag :email %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-xs-3">
          <%= label_tag :password %>
        </div>
        <div class="col-xs-9">
          <%= password_field_tag :password %>
        </div>
      </div>

      <%= submit_tag "Log In", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>