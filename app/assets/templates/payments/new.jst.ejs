<div id='errors'></div>

<form id="new-payment">
  <div class="form-group">
    <label>From:
      <select class="form-control" name="payment[sender_id]">
        <option value=""></option>
        <% users.forEach(function(user){ %>
          <option value="<%= user.escape('id') %>"><%= user.escape('email') %></option>
        <% }) %>
      </select>
    </label>
  </div>

  <div class="form-group">
    <label>To:
      <select class="form-control" name="payment[receiver_id]">
        <option value=""></option>
        <% users.forEach(function(user){ %>
          <option value="<%= user.escape('id') %>"><%= user.escape('email') %></option>
        <% }) %>
      </select>
    </label>
  </div>

  <div class="form-group">
    <label>Amount
      <input type="text" name="payment[amount]" class="form-control">
    </label>
  </div>

   <div class="form-group" id='payment-date'>
    <label>Date
      <input type='text' name='payment[date]' class='form-control'>
    </label>
  </div>

  <input type="submit" value="Record Payment" class="btn btn-primary">
</form>
