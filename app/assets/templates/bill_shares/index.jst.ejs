<div class="container collapse in">
  <div class="row">
    <div class="col-xs-2">Date of Bill</div>
    <div class="col-xs-6">Bill Share Details</div>
    <div class="col-xs-2">Buttons</div>
  </div>
  <% bill_shares.forEach(function(bill_share) { %>
    <div class="row">
      <div class="col-xs-2"><%= bill_share.bill().escape('date') %></div>
      <div class="col-xs-6">
        <%= bill_share.lender().escape('f_name') + ' ' + bill_share.lender().escape('l_name') %>
        <small>charged</small>
        <%= bill_share.debtor().escape('f_name') + ' ' + bill_share.debtor().escape('l_name') + ' '%>
        <%= '$' + bill_share.escape('amount') + ' '%>
        <small>for</small>
        <%= bill_share.bill().escape('description') %>
      </div>
      <div class="col-xs-2">
        <% if (bill_share.escape('status') === 'active') { %>
          <button class='btn btn-xs btn-success edit-share'
                  data-id="<%= bill_share.id %>"
                  data-status='paid'>
            Paid
          </button>
          <button class='btn btn-xs btn-warning edit-share'
                  data-id="<%= bill_share.id %>"
                  data-status='void'>
            Void
          </button>
        <% } else { %>
          <%= bill_share.escape('status') %>
        <% } %>
      </div>
    </div>
  <% }) %>
</div>
