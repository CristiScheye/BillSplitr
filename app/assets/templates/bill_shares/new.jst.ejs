<a id="remove-billshare-<%= count %>" class='btn remove-billshare'>X</a>

<div class="form-group">
  <label>Find friends by email address
    <select class="form-control"
            name="bill[bill_shares_attributes][<%= count %>][debtor_id]">
      <option value=""></option>
      <% users.forEach(function(user){ %>
        <option value="<%= user.escape('id') %>">
        <%= user.escape('email') %>
        (<%= user.escape('f_name') %> <%= user.escape('l_name') %>)
        </option>
      <% }) %>
    </select>
  </label>
</div>

<div class="form-group">
  <label>Amount
    <input type="text"
            name="bill[bill_shares_attributes][<%= count %>][amount]"
            class="form-control share-amount">
  </label>
</div>
