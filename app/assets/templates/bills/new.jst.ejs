<div id='errors'></div>

<form class="form" id="new-bill">
  <div class="container">
    <div class="row">
      <h3>Bill Details</h3>

      <div class="form-group">
        <label>Amount
        <input type='number' min='0' step='.01' id="bill_amount" name='bill[amount]' placeholder="$0.00" class="form-control">
        </label>
      </div>

      <div class="form-group">
        <label>Description
          <input type='text' name='bill[description]' class="form-control" placeholder="(e.g. skydiving)">
        </label>
      </div>

      <div class="form-group" id='bill-date'>
        <label>Date
          <input type='text' name='bill[date]' class='form-control'>
        </label>
      </div>

      <h3>Split it... </h3>
      <div id="share-type-slider">
      </div>
      <br>

      <div id="new-bill-share">
      </div>

      <div class="form-group">
        <a id="add-share-form" class="btn btn-success">+ Add More Friends</a>
      <div>

      <br>

      <input type='submit' class="btn btn-primary btn-large" value="Split It!">
    </div>
  </div>
</form>
