<div id='errors'></div>

<h1 class="text-primary">Split a New Bill</h1>
<div class="row bill-form">
  <div class="col-xs-10 col-xs-offset-1">
  </div>
  <div class="col-xs-10 col-xs-offset-1">
    <form class="form" id="new-bill">

      <h2 class="div-title">Bill Details...</h2>
      <div class="bordered-table row">
        <label for="bill_amount" class="col-sm-1 control-label">I Paid</label>
        <div class="col-sm-2">
          <input type='text' id="bill_amount" name='bill[amount]' placeholder="$100.00" class="form-control">
        </div>

        <label for="bill_description" class="col-sm-1">For</label>
        <div class="col-sm-5">
          <input type='text' name='bill[description]' class="form-control" placeholder="(e.g. skydiving)">
        </div>

        <label for="bill-date" class="col-sm-1">On</label>
        <div class="col-xs-2">
          <input id='bill-date' type='text' name='bill[date]' class='form-control' placeholder='Date'>
        </div>
        <br>

        <div id="share-type" >
          <a class='btn btn-primary'data-id='split-even'>Split Evenly</a>
          <a class="btn btn-primary" data-id='split-custom'>Custom Amounts</a>
        </div>
      </div>


      <br>
      <div id="bill-share-form" style="display: none" class="row">
        <h2 class="div-title">Friends Details...</h3>
        <div class="bordered-table">
          <select class="chosen-select"
                  data-placeholder="Find friends by name or email..."
                  >
            <option value=""></option>
            <% users.forEach(function(user){ %>
              <option value="<%= user.id %>">
              <%= user.escape('f_name') %> <%= user.escape('l_name') %> - <%= user.escape('email') %>
              </option>
            <% }) %>
          </select>

          <div id="new-bill-share"></div>
          <br>
        </div>
      </div>

      <div id="bill-submit" style="display: none">
        <input type='submit' class="btn btn-primary btn-lg btn-block" value="Split It!">
      </div>
    </form>
  </div>
</div>
